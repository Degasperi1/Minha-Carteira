<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório</title>

    <link rel="stylesheet" href="https://unpkg.com/tailwindcss/dist/tailwind.min.css">

    <style>
        table {
            width: 100%;
        }

        th {
            text-align: left;
        }
        tr {
            border-bottom: 1px solid;
        }
        td{
            border: 1px solid;
        }
        tfoot {
            width: 100%;
            margin-top: 50px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body class="bg-purple-100">
    <div class="m-8">
        <h1 class="text-3xl mb-8">Lista de movimentações -- <%=movements[0].mov_type%>s</h1>
        <table>
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Tipo</th>
                    <th>Descrição</th>
                    <th>Frequência</th>
                    <th>Valor</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                <% if (movements.length > 0) { %>
                    <% var total = 0; %>
                    <% movements.forEach(movement => { %>
                        <% total += parseFloat(movement.amount) %>
                        <tr>
                            <td><%= movement.id_movement %></td>
                            <td><%= movement.mov_type %></td>
                            <td><%= movement.description %></td>
                            <td><%= movement.frequency %></td>
                            <td><%= movement.amount %></td>
                            <td><%= movement.movement_date %></td>
                        </tr>
                    <% }); %>
                <% } %>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2" style="text-align: center;"><%=movements.length%> Movimentações</td>
                    <td colspan="4" style="text-align: center; margin-right: 10px; font-size: 20px;">Total = <%=Number((total).toFixed(2))%></td>
                </tr>
            </tfoot>
        </table>
    </div>
</body>
</html>